<%= javascript_include_tag "style" %>
<%= javascript_include_tag "pad" %>
<%= javascript_include_tag "read" %>
    <% form_tag do %>
        <table class="calcresults">
            <tr> 
                <th colspan="2">Compound Interest Calculator Results</th>
            </tr>
            <tr> 
                <td>
					<script type="text/javascript">
                    var CO = getValue(passed,'calculate_option');
                    if (CO == 0) {
                    document.write("Starting Principal:");
                    }
                    if (CO == 1) {
                    document.write("Compounded Amount:");
                    }
                    </script>
                </td>
                <td>
					<script type="text/javascript">
                    var A = getValue(passed,'Principal');
                    if (A < 0) { A = 0 }
                    document.write(currencyPad(A));
                    </script>
                </td>
            </tr>
            <tr> 
                <td>Interest Rate:</td>
                <td>
					<script type="text/javascript">
                    var B = getValue(passed,'Interestrate');
                    if (B < 0) { B = 0 }
                    document.write(roundingPad((B * 100.00)/100)+"%");
                    </script>
                </td>
            </tr>
            <tr> 
                <td>Number of Days:</td>
                <td>
					<script type="text/javascript">
                    var C = getValue(passed,'NumberOfPeriods');
                    if (C < 0) { C = 0 }
                    document.write(integerPad(C));
                    </script>
                </td>
            </tr>
            <tr> 
                <td>Compounding Period:</td>
                <td>
					<%= javascript_include_tag "cico" %>
                </td>
            </tr>
            <tr> 
                <td>Effective Rate of Interest: 
                </td>
                <td>
					<%= javascript_include_tag "cicc" %>
                </td>
            </tr>
            <tr> 
                <td>Compounded Rate of Return: 
                </td>
                <td>
					<script type="text/javascript">
                    document.write(roundingPad(CEIR * 100.00)+"%");
                    </script>
                </td>
            </tr>
            <tr> 
                <td>
					<script type="text/javascript">
                    var CO = getValue(passed,'calculate_option');
                    if (CO == 0) {
                    document.write("Compounded Amount:");
                    }
                    if (CO == 1) {
                    document.write("Starting Principal:");
                    }
                    </script>
				</td>
				<td>
                    <script type="text/javascript">
                    document.write(currencyPad(Z));
                    </script>
                </td>
            </tr>
            <tr>
                <td colspan="2"><%= javascript_include_tag "endb" %></td>
            </tr>
        </table>
<% end %>