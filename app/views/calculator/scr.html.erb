<%= javascript_include_tag "style" %>
<%= javascript_include_tag "pad" %>
<%= javascript_include_tag "read" %>   
    <script type="text/javascript">
    alert("Please wait while Savings Calculator builds the savings schedule. This can take up to 30 seconds or more, depending on the speed of your computer's processor and the web browser you are using. Click OK to continue.");
    </script>
    <% form_tag do %>
        <table class="calcresults">
            <tr> 
            	<th colspan="2">Savings Calculator</th>
            </tr>
            <tr>
                <td>Results</td>
                <td>&nbsp;</td>
            </tr>
            <tr> 
                <td>  
					<script type="text/javascript">
                    var SO = getValue(passed,'calculate_option');
                    if (SO == 0) {
                    document.write("Beginning Balance:");
                    }
                    if (SO == 1) {
                    document.write("Ending Balance:");
                    }
                    if (SO == 2) {
                    document.write("Beginning Balance:");
                    }
                    </script>
                </td>
            	<td><%= javascript_include_tag "scc" %></td>
            </tr>
            <tr> 
                <td>Interest Rate:</td>
                <td>  
                    <script type="text/javascript">
                    var B = getValue(passed,'Interestrate');
                    if (B < 0) { B = 0 }
                    document.write(roundingPad((B * 100.00)/100)+"%");
                    </script>
                </td>
            </tr>
            <tr> 
                <td>  
                    <script type="text/javascript">
                    var SO = getValue(passed,'calculate_option');
                    if (SO == 0) {
                    document.write("Periodic Contribution:");
                    }
                    if (SO == 1) {
                    document.write("Periodic Contribution:");
                    }
                    if (SO == 2) {
                    document.write("Ending Balance:");
                    }
                    </script>
                </td>
                <td>  
                    <script type="text/javascript">
                    if (UO == 0) {
                    document.write(currencyPad(C));
                    }
                    if (UO == 1) {
                    document.write(currencyPad(C));
                    }
                    if (UO == 2) {
                    document.write(currencyPad(Z));
                    }
                    </script>
                </td>
            </tr>
            <tr> 
                <td>Number of Periods:</td>
                <td>  
                    <script type="text/javascript">
                    document.write(integerPad(D));
                    </script>
                </td>
            </tr>
            <tr> 
                <td>Compounding Period:</td>
                <td>  
                    <script type="text/javascript">
                    document.write(strY);
                    </script>
                </td>
            </tr>
            <tr> 
                <td>Inflation Rate:</td>
                <td>  
                    <script type="text/javascript">
                    document.write(""+roundingPad((H*100.00)/100)+"%");
                    </script>
                </td>
            </tr>
            <tr> 
                <td>  
                    <script type="text/javascript">
                    var SO = getValue(passed,'calculate_option');
                    if (SO == 0) {
                    document.write("Ending Balance:");
                    }
                    if (SO == 1) {
                    document.write("Beginning Balance:");
                    }
                    if (SO == 2) {
                    document.write("Periodic Contribution:");
                    }
                    </script>
                </td>
                <td>  
                    <script type="text/javascript">
                    if (UO == 0) {
                    document.write(currencyPad(Z));
                    }
                    if (UO == 1) {
                    document.write(currencyPad(A));
                    }
                    if (UO == 2) {
                    document.write(currencyPad(C));
                    }
                    </script>
                </td>
            </tr>
            <tr>
                <td colspan="2"><%= javascript_include_tag "sca" %><%= javascript_include_tag "endb" %></td>
            </tr>
        </table>
	<% end %>